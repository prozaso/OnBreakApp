                                    </Button>

                                </StackPanel>
                            </materialDesign:PopupBox>
                            <Button x:Name="btnLimpiarCampos" Grid.Row="33" Content="LIMPIAR CAMPOS" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Height="Auto" Grid.Column="10" Padding="0" Grid.ColumnSpan="7" Margin="0,0,10,0" Click="BtnLimpiarCampos_Click" >

